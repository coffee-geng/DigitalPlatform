<wpf:ComponentBase x:Class="Coffee.DigitalPlatform.Components.FreezeDryer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
             xmlns:local="clr-namespace:Coffee.DigitalPlatform.Components"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <wpf:ComponentBase.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#55000000" Name="root" CornerRadius="11">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#88000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </wpf:ComponentBase.Resources>
    <Grid>
        <Grid Background="Transparent" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#DDD" BorderThickness="10,0" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"/>

            <Border Grid.ColumnSpan="3" Grid.RowSpan="5" Background="#EEE" CornerRadius="5,0,0,5" Margin="0,0,-1,0"/>
            <Path Data="M0,0 10,10,0,10" Fill="#EEE" Stretch="Fill" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,0,0,-1"/>
            <Border Background="#EEE" Grid.Row="2" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="2" CornerRadius="0,0,5,0"/>

            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2">
                <Border.Background>
                    <VisualBrush TileMode="FlipY" Viewport="-0.2,0,1.3,0.06">
                        <VisualBrush.Visual>
                            <Path Data="M0,0 0,40 40 40" Stroke="#16a1ff" StrokeThickness="5"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.Background>
            </Border>

            <Border Grid.Column="1" Grid.Row="1" CornerRadius="5"
            Background="#AA16a1ff" Margin="0,0,-5,-8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.15*"/>
                    </Grid.RowDefinitions>
                    <Border Height="{Binding RelativeSource={RelativeSource self},Path=ActualWidth}" 
                        Background="White" CornerRadius="20" Grid.Column="1" Grid.Row="1"/>
                    <Border Height="{Binding RelativeSource={RelativeSource self},Path=ActualWidth}" 
                        Background="White" CornerRadius="20" Grid.Column="1" Grid.Row="2"/>

                    <Border Grid.Column="3" Grid.Row="1" Background="Aqua" Grid.RowSpan="2" CornerRadius="5" Opacity="0.5"/>
                </Grid>
            </Border>
        </Grid>

        <!--锚点-->
        <local:ComponentAnchor x:Name="anchor" Canvas="{Binding Canvas, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wpf:ComponentBase}}}" />

        <!--点位信息变量列表-->
        <local:VariableListView x:Name="variableListView" IsShowingPopup="{Binding IsShowingVariableListPopup, ElementName=root, Mode=TwoWay}"
                        IsShowingPopupChanged="variableListView_IsShowingPopupChanged"/>

        <!--手动控制选项列表-->
        <local:ManualListView x:Name="manualListView" IsShowingPopup="{Binding IsShowingManualListPopup, ElementName=root, Mode=TwoWay}"
                        IsShowingPopupChanged="manualListView_IsShowingPopupChanged"/>
    </Grid>
</wpf:ComponentBase>
