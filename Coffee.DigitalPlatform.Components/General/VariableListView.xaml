<UserControl x:Class="Coffee.DigitalPlatform.Components.VariableListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Coffee.DigitalPlatform.Components"
             xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>
        <local:InfoButtonVisibilityValueConverter x:Key="ibv"/>
        <ControlTemplate TargetType="ToggleButton" x:Key="InfoButtonTemplate">
            <Border Background="#F7F9FA" CornerRadius="100" BorderThickness="1" BorderBrush="#DDD" Name="border">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="#16a1ff" ShadowDepth="0" Opacity="0.1"/>
                </Border.Effect>
                <TextBlock Text="{TemplateBinding Content}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="#EEE"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Canvas>
        <!--变量列表开关-->
        <ToggleButton Width="18" Height="18" Name="btnInfo" Content="i"
          Checked="btnInfo_Checked" Unchecked="btnInfo_Unchecked"
          Canvas.Left="{Binding RelativeSource={RelativeSource AncestorType={x:Type wpf:ComponentBase}},Path=ActualWidth}"
          Canvas.Bottom="0"
          Template="{StaticResource InfoButtonTemplate}">
            <ToggleButton.Visibility>
                <MultiBinding Converter="{StaticResource ibv}">
                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type wpf:ComponentBase}}" Path="IsMonitor"/>
                    <Binding RelativeSource="{RelativeSource AncestorType={x:Type wpf:ComponentBase}}" Path="VariableList.Count"/>
                </MultiBinding>
            </ToggleButton.Visibility>
        </ToggleButton>
        <!--变量列表数据-->
        <Border Width="120" CornerRadius="5" BorderThickness="1" BorderBrush="#EEE" 
            Canvas.Left="{Binding RelativeSource={RelativeSource AncestorType={x:Type wpf:ComponentBase}},Path=ActualWidth}"
            Canvas.Top="{Binding RelativeSource={RelativeSource AncestorType={x:Type wpf:ComponentBase}},Path=ActualHeight}"
            Margin="20,-25,0,0"
            Visibility="{Binding ElementName=root,Path=IsShowingPopup,Converter={StaticResource b2v}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="22"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="#AEEE" Grid.RowSpan="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Color="#16a1ff" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                </Border>
                <TextBlock Text="实时变量数据" VerticalAlignment="Bottom" 
               HorizontalAlignment="Center" Foreground="#888"/>
                <ItemsControl ItemsSource="{Binding VariableList,RelativeSource={RelativeSource AncestorType={x:Type wpf:ComponentBase}}}" 
                  Margin="5" Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#9FFF" CornerRadius="3" Margin="0,1">
                                <Grid Height="22">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding VarName}" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   FontSize="11" Foreground="#AAA" 
                                   TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Value}" 
                                   Grid.Column="1" FontSize="11" 
                                   VerticalAlignment="Center"
                                   Foreground="#555" FontWeight="Normal"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Canvas>
</UserControl>
