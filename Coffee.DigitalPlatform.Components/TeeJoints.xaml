<wpf:ComponentBase x:Class="Coffee.DigitalPlatform.Components.TeeJoints"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
             xmlns:local="clr-namespace:Coffee.DigitalPlatform.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <wpf:ComponentBase.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#55000000" Name="root" CornerRadius="11">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#88000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </wpf:ComponentBase.Resources>
    <Grid>
        <Grid Margin="2" RenderTransformOrigin="0.5,0.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="1.7*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Border Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="7">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#16a1ff" Offset="0"/>
                            <GradientStop Color="#AA16a1ff" Offset="0.4"/>
                            <GradientStop Color="#16a1ff" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border Background="#BBB" CornerRadius="2" Grid.ColumnSpan="4"/>
                <Border Background="#BBB" CornerRadius="2" Grid.Row="6" Grid.ColumnSpan="4"/>

                <Border Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#16a1ff" Offset="0"/>
                            <GradientStop Color="#AA16a1ff" Offset="0.5"/>
                            <GradientStop Color="#16a1ff" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Path Data="M0 5,5 0,5 10z" Stretch="Fill" Grid.Row="3" Grid.Column="2" Margin="0,0,-1,0">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#16a1ff" Offset="0"/>
                            <GradientStop Color="#5EBFFF" Offset="0.5"/>
                            <GradientStop Color="#16a1ff" Offset="1"/>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
                <Border Background="#BBB" CornerRadius="2" Grid.Row="2" Grid.Column="5" Grid.RowSpan="3"/>

            </Grid>
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding RotateAngle,RelativeSource={RelativeSource AncestorType=wpf:ComponentBase}}"/>
            </Grid.RenderTransform>

        </Grid>

        <!--Anchor-->
        <local:ComponentAnchor x:Name="anchor" Canvas="{Binding Canvas, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wpf:ComponentBase}}}" />
    </Grid>
</wpf:ComponentBase>
