<wpf:ComponentBase x:Class="Coffee.DigitalPlatform.Components.Filter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
             xmlns:local="clr-namespace:Coffee.DigitalPlatform.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <wpf:ComponentBase.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#55000000" Name="root" CornerRadius="11">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#88000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </wpf:ComponentBase.Resources>
    <Grid>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Border Background="#BBB" CornerRadius="1"/>
            <Border Background="#BBB" CornerRadius="1" Grid.Column="4"/>
            <Border Grid.Column="1"  Margin="0,2" Grid.ColumnSpan="3">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#16a1ff" Offset="0"/>
                        <GradientStop Color="#5EBFFF" Offset="0.5"/>
                        <GradientStop Color="#16a1ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Path Data="M0 0,2 30A4 4 0 0 0 10 30L12 0" Stretch="Fill" Grid.Column="2" Grid.Row="1"
              Stroke="#DDD" StrokeThickness="1">
                <Path.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#16a1ff" Offset="0"/>
                        <GradientStop Color="#5EBFFF" Offset="0.5"/>
                        <GradientStop Color="#16a1ff" Offset="1"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
            <Border Background="#EEE" Grid.Column="1" Grid.ColumnSpan="3"
                Margin="5,0" CornerRadius="0,0,3,3" BorderThickness="1" BorderBrush="#DDD"/>
        </Grid>

        <!--Anchor-->
        <local:ComponentAnchor x:Name="anchor" Canvas="{Binding Canvas, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wpf:ComponentBase}}}" />
    </Grid>
</wpf:ComponentBase>
