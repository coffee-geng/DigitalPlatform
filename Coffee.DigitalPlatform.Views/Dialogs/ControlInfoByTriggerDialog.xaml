<Window x:Class="Coffee.DigitalPlatform.Views.ControlInfoByTriggerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Coffee.DigitalPlatform.Views"
        xmlns:comm="clr-namespace:Coffee.DigitalPlatform.Common;assembly=Coffee.DigitalPlatform.Common"
        xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
        xmlns:controls="clr-namespace:Coffee.DigitalPlatform.Controls;assembly=Coffee.DigitalPlatform.Controls"
        xmlns:fb="clr-namespace:Coffee.DigitalPlatform.Controls.FilterBuilder;assembly=Coffee.DigitalPlatform.Controls"
        mc:Ignorable="d"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight" FontSize="12"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="联动控制选项条件配置" Height="600" Width="600">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ExpanderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="b2v"/>

            <Style TargetType="Button" x:Key="ControlButtonStyle">
                <Setter Property="Foreground" Value="#888"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" Name="back">
                                <Border CornerRadius="{Binding Tag,RelativeSource={RelativeSource Mode=TemplatedParent}}" Name="border">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#09000000"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#11000000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#F7F9FA">
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#D4D4D4" BorderThickness="1" CornerRadius="3" MinHeight="26" Background="White" Name="border">
                                <ScrollViewer Name="PART_ContentHost" Margin="0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#16a1ff"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Background="#AA409EFE" Grid.ColumnSpan="2"/>
        <TextBlock Text="{Binding CurrentDevice.Name,StringFormat={}{0}-联动控制报警条件配置}" Grid.Column="1" VerticalAlignment="Center" FontSize="15" Foreground="#BBB" Margin="10,0"/>

        <Border Height="24" Background="#99FFFFFF" CornerRadius="12" Margin="10,0" WindowChrome.IsHitTestVisibleInChrome="True">
            <TextBox Text="条件名" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
         Margin="10,0,30,0" Foreground="#888" FontSize="11" Style="{x:Null}"/>
        </Border>
        <TextBlock Text="&#xe651;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Right"
       Margin="20,0" Foreground="#AAA"/>

        <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource WindowControlButtonStyle}" 
            WindowChrome.IsHitTestVisibleInChrome="True" Margin="10,0" Content="&#xe653;" FontFamily="{StaticResource Iconfont}"
            Width="30" Height="30" Click="Button_Click"
            Command="{Binding ResetCommand}">
        </Button>

        <Button x:Name="btnAddCondition" Style="{StaticResource NormalButtonStyle}" 
            Command="{Binding AddControlInfoByTriggerCommand}"
            Background="Orange" Height="28" Margin="20,0" Grid.Row="2" 
            Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Margin="15,0">
                <Run  Text="&#xe8fe;" FontFamily="{StaticResource Iconfont}"/>
                <Run Text="添加报警条件"/>
            </TextBlock>
        </Button>

        <!--列出当前设备关联的所有联动控制选项条件-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Height="1" Background="#EEE" VerticalAlignment="Bottom" Margin="10,0"/>
            <Grid x:Name="titleGrid" Margin="10,5" Grid.Row="0" TextBlock.Foreground="#888">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="序号" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="联控条件" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="联控动作" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="联控设备" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>                
                <TextBlock Text="操作" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Grid.ColumnSpan="2">
                <ItemsControl ItemsSource="{Binding ControlInfosByTrigger}" AlternationCount="10000" Name="ic" Margin="10,5">
                    <ItemsControl.ItemTemplateSelector>
                        <local:ControlInfoByTriggerTemplateSelector>
                            <local:ControlInfoByTriggerTemplateSelector.ControlInfoTemplate>
                                <DataTemplate>
                                    <Expander x:Name="expander" Margin="0,3" Style="{StaticResource LinkageExpanderStyle}" Padding="0" IsExpanded="{Binding IsEditing}">
                                        <Expander.Header>
                                            <Grid MinHeight="28" Width="{Binding ActualWidth, ElementName=expander}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="0.5*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter,AncestorLevel=2}, Converter={x:Static wpf:RowNumberConverter.Instance}, StringFormat={}{0:00}}"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#888"/>
                                                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="3,0,5,0"
                                                    Text="{Binding FormattedCondition}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left"
                                                    Text="{Binding Header}" TextWrapping="Wrap"/>
                                                <TextBlock Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"
                                                           Text="{Binding LinkageDevice.Name}"/>
                                                <StackPanel Orientation="Horizontal" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="{Binding IsEditing, Converter={x:Static wpf:BoolToVisibilityConverter.Instance}, ConverterParameter=Not}">
                                                    <TextBlock Margin="0,0,5,0">
                                                    <Hyperlink TextDecorations="None" IsEnabled="{Binding DataContext.IsEditingControlInfo, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}, Converter={x:Static wpf:NotBooleanConverter.Instance}}"
                                                        Command="{Binding DataContext.EditControlInfoByTriggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}">编辑</Hyperlink>
                                                    </TextBlock>
                                                    <TextBlock>
                                                    <Hyperlink TextDecorations="None" IsEnabled="{Binding DataContext.IsEditingControlInfo, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}, Converter={x:Static wpf:NotBooleanConverter.Instance}}"
                                                        Command="{Binding DataContext.RemoveControlInfoByTriggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}">删除</Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>
                                        <Expander.Content>
                                            <Grid x:Name="grid">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="30"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="28"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.ColumnSpan="2" Text="编辑联动控制选项信息" FontWeight="Bold" />
                                                    <StackPanel Grid.Row="1">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="联控动作标题" Width="80" VerticalAlignment="Center"/>
                                                            <TextBox Width="400" VerticalAlignment="Center"
                                                                     Text="{Binding NewHeader}" />
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                                            <TextBlock Text="联控设备" Width="80" VerticalAlignment="Center"/>
                                                            <ComboBox Name="cb_device" Width="400" VerticalAlignment="Center"
                                                                ItemsSource="{Binding DataContext.DeviceCollection, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" DisplayMemberPath="Name"
                                                                SelectedItem="{Binding NewDevice}"
                                                                Style="{StaticResource PropComboBoxStyle}">
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="SelectionChanged">
                                                                        <i:InvokeCommandAction Command="{Binding SelectDeviceCommand}" CommandParameter="{Binding SelectedValue, ElementName=cb_device}"/>
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>
                                                            </ComboBox>
                                                        </StackPanel>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="30"/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <Canvas>
                                                                <Path Data="M0 0 8 5 0 10" Fill="#F7F9FA" Canvas.Top="0" Canvas.Right="0" Margin="0,9,-10,0"/>
                                                            </Canvas>
                                                            <Border Height="1" Background="#EEE" VerticalAlignment="Bottom"/>
                                                            <Border Background="White" Grid.Row="1" CornerRadius="0,0,5,5"/>

                                                            <TextBlock Text="手动控制选项" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" Foreground="#777"/>
                                                            <Button Style="{StaticResource ControlButtonStyle}" Content="&#xe8fe;" FontFamily="{StaticResource Iconfont}"
                                                                Width="20" Height="20" HorizontalAlignment="Right" Margin="10,0" Tag="3"
                                                                Command="{Binding AddLinkageActionCommand}"/>
                                                            <Grid Grid.Row="1">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="28"/>
                                                                    <RowDefinition/>
                                                                </Grid.RowDefinitions>
                                                                <Grid TextBlock.Foreground="#999">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition Width="35"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="控制地址" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="写入数据" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="操作" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Grid>
                                                                <ItemsControl Grid.Row="1" Name="ic1"
                                                                    ItemsSource="{Binding NewLinkageActions}" Margin="0,0,0,10">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Grid Height="30">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition Width="35"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <ComboBox Grid.Column="0" HorizontalContentAlignment="Stretch" Margin="2,1,2,1"
                                                                                    ItemsSource="{Binding DataContext.NewDevice.Variables, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                                    SelectedItem="{Binding Variable}"
                                                                                    Style="{StaticResource VariableComboBoxStyle}">
                                                                                    <ComboBox.ItemContainerStyle>
                                                                                        <Style TargetType="ComboBoxItem">
                                                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                                            <Setter Property="Padding" Value="0"/>
                                                                                            <Setter Property="Margin" Value="0"/>
                                                                                        </Style>
                                                                                    </ComboBox.ItemContainerStyle>
                                                                                    <ComboBox.ItemTemplate>
                                                                                        <DataTemplate>
                                                                                            <Grid>
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="*"/>
                                                                                                    <ColumnDefinition Width="*"/>
                                                                                                </Grid.ColumnDefinitions>
                                                                                                <TextBlock Text="{Binding VarName}" Grid.Column="0" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                                                                                <TextBlock Text="{Binding VarAddress}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,3,0"/>
                                                                                            </Grid>
                                                                                        </DataTemplate>
                                                                                    </ComboBox.ItemTemplate>
                                                                                </ComboBox>
                                                                                <TextBox Grid.Column="1" Height="28" Margin="2,1,2,1" TextAlignment="Center"
                                                                                    Text="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                                                                                    ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" />
                                                                                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                                    <Hyperlink Command="{Binding DataContext.RemoveLinkageActionCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                                        CommandParameter="{Binding}">删除</Hyperlink>
                                                                                </TextBlock>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </Grid>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Grid.Row="1" Margin="0,5,0,5">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>
                                                    <GroupBox Header="联动控制条件预览：">
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{x:Static local:FilterSchemeToStringConverter.Instance}">
                                                                    <Binding Path="DataContext.FilterScheme" ElementName="conditionView" />
                                                                    <Binding Path="DataContext.FilterSchemeUpdateTime" ElementName="conditionView" />
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </GroupBox>
                                                    <GroupBox Grid.Row="1" Header="联动控制条件编辑：" Margin="0,6,0,0">
                                                        <fb:ConditionView x:Name="conditionView" CurrentFilterScheme="{Binding FilterScheme}">
                                                            <fb:ConditionView.DataContext>
                                                                <MultiBinding Converter="{x:Static local:LinkageConditionViewModelConverter.Instance}">
                                                                    <Binding Path="." />
                                                                    <Binding Path="." ElementName="conditionView" />
                                                                </MultiBinding>
                                                            </fb:ConditionView.DataContext>
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="CurrentFilterSchemeChanged">
                                                                    <i:InvokeCommandAction Command="{Binding DataContext.ReceiveFilterSchemeCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                        PassEventArgsToCommand="True" EventArgsConverter="{x:Static local:CurrentFilterSchemeChangedEventArgsConverter.Instance}" EventArgsConverterParameter="{Binding DataContext, ElementName=grid}" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </fb:ConditionView>
                                                    </GroupBox>
                                                </Grid>
                                                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                                                    <Button Background="#AA409EFE" Height="24" Width="80"
                                                        Style="{StaticResource NormalButtonStyle}" Content="确定"
                                                        Command="{Binding DataContext.ConfirmEditControlInfoByTriggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                        CommandParameter="{Binding .}"/>
                                                    <Button Background="#AA409EFE" Height="24" Width="80" Margin="20,0,0,0"
                                                        Style="{StaticResource NormalButtonStyle}" Content="取消"
                                                        Command="{Binding DataContext.CancelEditControlInfoByTriggerCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" 
                                                        CommandParameter="{Binding .}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Content>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Expanded">
                                                <i:InvokeCommandAction Command="{Binding DataContext.LoadFilterSchemeCommand, ElementName=conditionView}" CommandParameter="{Binding ConditionTemplate}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="Collapsed">
                                                <i:InvokeCommandAction Command="{Binding DataContext.UnloadFilterSchemeCommand, ElementName=conditionView}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Expander>
                                </DataTemplate>
                            </local:ControlInfoByTriggerTemplateSelector.ControlInfoTemplate>
                            <local:ControlInfoByTriggerTemplateSelector.NewTemplate>
                                <DataTemplate>
                                    <Grid x:Name="grid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="28"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.ColumnSpan="2" Text="添加联动控制选项信息" FontWeight="Bold" />
                                            <StackPanel Grid.Row="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="联控动作标题" Width="80" VerticalAlignment="Center"/>
                                                    <TextBox Width="400" VerticalAlignment="Center"
                                                             Text="{Binding NewHeader}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                                    <TextBlock Text="联控设备" Width="80" VerticalAlignment="Center"/>
                                                    <ComboBox Name="cb_device" Width="400" Margin="0,0,2,0" VerticalAlignment="Center"
                                                        ItemsSource="{Binding DataContext.DeviceCollection, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" DisplayMemberPath="Name"
                                                        Style="{StaticResource PropComboBoxStyle}">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="SelectionChanged">
                                                                <i:InvokeCommandAction Command="{Binding SelectDeviceCommand}" CommandParameter="{Binding SelectedValue, ElementName=cb_device}"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </ComboBox>
                                                </StackPanel>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="30"/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Canvas>
                                                        <Path Data="M0 0 8 5 0 10" Fill="#F7F9FA" Canvas.Top="0" Canvas.Right="0" Margin="0,9,-10,0"/>
                                                    </Canvas>
                                                    <Border Height="1" Background="#EEE" VerticalAlignment="Bottom"/>
                                                    <Border Background="White" Grid.Row="1" CornerRadius="0,0,5,5"/>

                                                    <TextBlock Text="联动控制选项" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" Foreground="#777"/>
                                                    <Button Style="{StaticResource ControlButtonStyle}" Content="&#xe8fe;" FontFamily="{StaticResource Iconfont}"
                                                        Width="20" Height="20" HorizontalAlignment="Right" Margin="10,0" Tag="3"
                                                        Command="{Binding AddLinkageActionCommand}"/>
                                                    <Grid Grid.Row="1">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="28"/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <Grid TextBlock.Foreground="#999">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition Width="35"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="控制地址" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="写入数据" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                            <TextBlock Text="操作" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        </Grid>
                                                        <ItemsControl Grid.Row="1" Name="ic1"
                                                        ItemsSource="{Binding NewLinkageActions}" Margin="0,0,0,10">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid Height="30">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition/>
                                                                            <ColumnDefinition Width="35"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <ComboBox Grid.Column="0" HorizontalContentAlignment="Stretch" Margin="2,1,2,1"
                                                                        ItemsSource="{Binding DataContext.NewDevice.Variables, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                        SelectedItem="{Binding Variable}"
                                                                        Style="{StaticResource VariableComboBoxStyle}">
                                                                            <ComboBox.ItemContainerStyle>
                                                                                <Style TargetType="ComboBoxItem">
                                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                                    <Setter Property="Padding" Value="0"/>
                                                                                    <Setter Property="Margin" Value="0"/>
                                                                                </Style>
                                                                            </ComboBox.ItemContainerStyle>
                                                                            <ComboBox.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <TextBlock Text="{Binding VarName}" Grid.Column="0" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                                                                        <TextBlock Text="{Binding VarAddress}" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,3,0"/>
                                                                                    </Grid>
                                                                                </DataTemplate>
                                                                            </ComboBox.ItemTemplate>
                                                                        </ComboBox>
                                                                        <TextBox Grid.Column="1" Height="28" Margin="2,1,2,1" TextAlignment="Center"
                                                                        Text="{Binding Value, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                                                                        ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" />
                                                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                        <Hyperlink Command="{Binding DataContext.RemoveLinkageActionCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                            CommandParameter="{Binding}">删除</Hyperlink>
                                                                        </TextBlock>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1" Margin="0,5,0,5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <GroupBox Header="联动控制条件预览：">
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding Converter="{x:Static local:FilterSchemeToStringConverter.Instance}">
                                                            <Binding Path="DataContext.FilterScheme" ElementName="conditionView" />
                                                            <Binding Path="DataContext.FilterSchemeUpdateTime" ElementName="conditionView" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </GroupBox>
                                            <GroupBox Grid.Row="1" Header="联动控制条件编辑：" Margin="0,6,0,0">
                                                <fb:ConditionView x:Name="conditionView" CurrentFilterScheme="{Binding FilterScheme}">
                                                    <fb:ConditionView.DataContext>
                                                        <MultiBinding Converter="{x:Static local:LinkageConditionViewModelConverter.Instance}">
                                                            <Binding Path="." />
                                                            <Binding Path="." ElementName="conditionView" />
                                                        </MultiBinding>
                                                    </fb:ConditionView.DataContext>
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="CurrentFilterSchemeChanged">
                                                            <i:InvokeCommandAction Command="{Binding DataContext.ReceiveFilterSchemeCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                               PassEventArgsToCommand="True" EventArgsConverter="{x:Static local:CurrentFilterSchemeChangedEventArgsConverter.Instance}" EventArgsConverterParameter="{Binding DataContext, ElementName=grid}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </fb:ConditionView>
                                            </GroupBox>
                                        </Grid>

                                        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                                            <Button Background="#AA409EFE" Height="24" Width="80"
                                            Style="{StaticResource NormalButtonStyle}" Content="确定"
