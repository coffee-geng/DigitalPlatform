<Window x:Class="Coffee.DigitalPlatform.Views.VariableAlarmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coffee.DigitalPlatform.Views"
        xmlns:comm="clr-namespace:Coffee.DigitalPlatform.Common;assembly=Coffee.DigitalPlatform.Common"
        xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
        xmlns:controls="clr-namespace:Coffee.DigitalPlatform.Controls;assembly=Coffee.DigitalPlatform.Controls"
        xmlns:fb="clr-namespace:Coffee.DigitalPlatform.Controls.FilterBuilder;assembly=Coffee.DigitalPlatform.Controls"
        mc:Ignorable="d"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight" FontSize="12"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Title="变量报警条件配置" Height="400" Width="600">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#F7F9FA">
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="3" MinHeight="26" Background="White" Name="border">
                                <ScrollViewer Name="PART_ContentHost" Margin="0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#16a1ff"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Border Background="#AA409EFE" Grid.ColumnSpan="2"/>
        <TextBlock Text="{Binding Header,StringFormat={}{0}-变量报警条件配置}" Grid.Column="1" VerticalAlignment="Center" FontSize="15" Foreground="#BBB" Margin="10,0"/>

        <Border Height="24" Background="#99FFFFFF" CornerRadius="12" Margin="10,0" WindowChrome.IsHitTestVisibleInChrome="True">
            <TextBox Text="条件名" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
             Margin="10,0,30,0" Foreground="#888" FontSize="11" Style="{x:Null}"/>
        </Border>
        <TextBlock Text="&#xe651;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" HorizontalAlignment="Right"
           Margin="20,0" Foreground="#AAA"/>

        <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource WindowControlButtonStyle}" 
        WindowChrome.IsHitTestVisibleInChrome="True" Margin="10,0" Content="&#xe653;" FontFamily="{StaticResource Iconfont}"
        Width="30" Height="30" Click="BtnCancel_Click">
        </Button>

        <Button x:Name="btnAddCondition" Style="{StaticResource NormalButtonStyle}" 
        Command="{Binding AddConditionCommand}"
        Background="Orange" Height="28" Margin="20,0" Grid.Row="2" 
        Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Margin="15,0">
            <Run  Text="&#xe8fe;" FontFamily="{StaticResource Iconfont}"/>
            <Run Text="添加报警条件"/>
            </TextBlock>
        </Button>

        <!--列出当前设备关联的所有报警条件-->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Height="1" Background="#EEE" VerticalAlignment="Bottom" Margin="10,0"/>
            <Grid Margin="10,5" Grid.Row="0" TextBlock.Foreground="#888">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="序号" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="标题" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="预警条件" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="提醒内容信息" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="操作" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Grid.ColumnSpan="2">
                <ItemsControl ItemsSource="{Binding AlarmConditions}" AlternationCount="10000" Name="ic" Margin="10,5">
                    <ItemsControl.ItemTemplateSelector>
                        <local:VariableAlarmTemplateSelector>
                            <local:VariableAlarmTemplateSelector.AlarmTemplate>
                                <DataTemplate>
                                    <Expander Margin="0,3">
                                        <Expander.Header>
                                            <Grid Height="28">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}, Converter={StaticResource rnc}, StringFormat={}{0:00}}"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#888"/>
                                                <TextBox Text="{Binding Title}" Grid.Column="1" HorizontalContentAlignment="Center" Margin="3,0"/>
                                                <TextBlock Text="{Binding FormattedCondition}" Grid.Column="2" HorizontalAlignment="Center" Margin="3,0"/>
                                                <TextBox Text="{Binding AlarmMessage}" Grid.Column="3"/>
                                                <StackPanel Orientation="Horizontal" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock>
                                                        <Hyperlink TextDecorations="None" 
                                                            Command="{Binding EditConditionCommand}" CommandParameter="{Binding}">编辑</Hyperlink>
                                                    </TextBlock>
                                                    <TextBlock>
                                                        <Hyperlink TextDecorations="None" 
                                                            Command="{Binding DeleteConditionCommand}" CommandParameter="{Binding}">删除</Hyperlink>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>
                                        <Expander.Content>
                                            <Grid x:Name="expandContent" Background="Yellow">
                                                <Grid.Tag>
                                                    <MultiBinding Converter="{x:Static local:AlarmConditionViewModelConverter.Instance}">
                                                        <Binding Path="." />
                                                        <Binding Path="DataContext.AlarmConditionFilterSchemeDict" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}" />
                                                        <Binding Path="DataContext.DefaultFilterScheme" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}" />
                                                    </MultiBinding>
                                                </Grid.Tag>
                                                <fb:ConditionView DataContext="{Binding DataContext.Tag, ElementName=expandContent}" />
                                            </Grid>
                                        </Expander.Content>
                                    </Expander>
                                </DataTemplate>
                            </local:VariableAlarmTemplateSelector.AlarmTemplate>
                            <local:VariableAlarmTemplateSelector.NewTemplate>
                                <DataTemplate>
                                    <Expander Margin="0,3">
                                        <Expander.Header>
                                            <Grid Height="28">
                                                <TextBlock Text="新建报警信息" />
                                            </Grid>
                                        </Expander.Header>
                                        <Expander.Content>
                                            <Grid>
                                                <fb:ConditionView>
                                                    <fb:ConditionView.DataContext>
                                                        <MultiBinding Converter="{x:Static local:AlarmConditionViewModelConverter.Instance}">
                                                            <Binding Path="." />
                                                            <Binding Path="DataContext.AlarmConditionFilterSchemeDict" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}" />
                                                            <Binding Path="DataContext.DefaultFilterScheme" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}" />
                                                        </MultiBinding>
                                                    </fb:ConditionView.DataContext>
                                                </fb:ConditionView>
                                            </Grid>
                                        </Expander.Content>
                                    </Expander>
                                </DataTemplate>
                            </local:VariableAlarmTemplateSelector.NewTemplate>
                        </local:VariableAlarmTemplateSelector>
                    </ItemsControl.ItemTemplateSelector>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
