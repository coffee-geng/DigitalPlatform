<UserControl x:Class="Coffee.DigitalPlatform.Views.AlarmPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:wpf="clr-namespace:Coffee.DigitalPlatform.CommWPF;assembly=Coffee.DigitalPlatform.CommWPF"
             xmlns:local="clr-namespace:Coffee.DigitalPlatform.Views"
             xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1300"
             DataContext="{Binding Source={StaticResource locator}, Path=AlarmViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/ComboBoxStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Coffee.DigitalPlatform.Assets;component/Styles/DataGridStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBox" x:Key="searchTextBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" MinHeight="26" Background="#DFFF" Name="bor">
                                <Grid>
                                    <TextBlock Text="{TemplateBinding Tag}" VerticalAlignment="Center" Margin="5,0" 
                                           FontSize="11" Foreground="#BBB" Name="mark"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                           Visibility="Collapsed"/>
                                    <ScrollViewer Name="PART_ContentHost" Margin="0"/>
                                    <TextBlock Text="&#xe651;" VerticalAlignment="Center" HorizontalAlignment="Right" 
                                           FontFamily="{StaticResource Iconfont}" Margin="10,0"
                                           FontSize="13" Foreground="#888"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="bor" Property="BorderBrush" Value="#16a1ff"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding Path=Text,RelativeSource={RelativeSource Mode=Self}}" Value="">
                                    <Setter Property="Visibility" TargetName="mark" Value="Visible"/>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="CenterAlignmentStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="80,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1"/>
        <Border Background="#5FFF" Grid.Row="1" CornerRadius="0,0,5,5"/>
        <Border Width="3" Height="15" Background="Gold" HorizontalAlignment="Left" CornerRadius="2"/>
        <TextBlock Text="实时报警状态" VerticalAlignment="Center" HorizontalAlignment="Left"
               Foreground="#AA409EFE" FontSize="18" FontWeight="Normal" Margin="10,0,0,0">
            <TextBlock.Effect>
                <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="10" Opacity="0.8"/>
            </TextBlock.Effect>
        </TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <!--时间：自行处理-->
            <TextBlock Text="关键词" VerticalAlignment="Center" Foreground="#888" Margin="10,0"/>
            <TextBox Width="260" Tag="输入设备ID/设备名称/变量ID/变量名称检索" Style="{StaticResource searchTextBox}"
                 Text="{Binding KeyValue}"/>
            <Button Content="刷新" Height="30" Width="80" Style="{StaticResource ToolButtonStlye}"
                Command="{Binding RefreshCommand}" Margin="10,0"/>
            <Button HorizontalAlignment="Right" Height="30" Width="120"
                Style="{StaticResource NormalButtonStyle}"
                Command="{Binding ExportCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xe695;" FontFamily="{StaticResource Iconfont}" VerticalAlignment="Center" Margin="3,0"/>
                    <TextBlock Text="导出报警列表" VerticalAlignment="Center" Margin="3,0"/>
                </StackPanel>
            </Button>
        </StackPanel>


        <DataGrid x:Name="alarmDataGrid" Grid.Row="1" Background="Transparent" BorderThickness="0" ItemsSource="{Binding AlarmCollectionView}"
                  IsReadOnly="True" SelectionMode="Single" LoadingRow="alarmDataGrid_LoadingRow"
                  HorizontalGridLinesBrush="#888" VerticalGridLinesBrush="#888">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#444"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号" Width="40" Binding="{Binding Path=Header, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGridRow}}, StringFormat={}{0:00}}" Foreground="#AAA" ElementStyle="{StaticResource CenterAlignmentStyle}"/>
                <DataGridTextColumn Header="报警等级" Width="60" Binding="{Binding AlarmLevel}" ElementStyle="{StaticResource CenterAlignmentStyle}" FontWeight="Normal"/>
                <DataGridTextColumn Header="报警信息" Width="1.5*" Binding="{Binding AlarmMessage}"/>
                <DataGridTextColumn Header="设备名称" Width="*" Binding="{Binding AlarmDevice.Name}" ElementStyle="{StaticResource CenterAlignmentStyle}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <ToolTip Content="{Binding AlarmDevice.DeviceNum}" ContentStringFormat="{}设备编号：{0}" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="触发条件" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <html:HtmlLabel Text="{Binding FormattedCondition}" VerticalAlignment="Center" FontSize="6" Foreground="#444">
                                <html:HtmlLabel.ToolTip>
                                    <ItemsControl ItemsSource="{Binding AlarmValues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="5">
                                                    <TextBlock Text="{Binding VarName}" FontWeight="Bold" Foreground="#16a1ff"/>
                                                    <TextBlock Text=": " FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding FinalValue}" FontWeight="Bold" Foreground="#E67300"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </html:HtmlLabel.ToolTip>
                            </html:HtmlLabel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="当前状态" Width="80" Binding="{Binding AlarmState.Status, Converter={x:Static local:AlarmStateNameConverter.Instance }}" ElementStyle="{StaticResource CenterAlignmentStyle}" FontWeight="Normal">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                            <Setter Property="Foreground" Value="DarkGray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AlarmState.Status}" Value="Unsolved">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AlarmState.Status}" Value="SolvedBySystem">
                                    <Setter Property="Foreground" Value="DarkOliveGreen"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AlarmState.Status}" Value="SolvedByManual">
                                    <Setter Property="Foreground" Value="DarkGreen"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="记录时间" Width="126" Binding="{Binding AlarmTime, StringFormat='yyyy年MM月dd日 HH:mm'}" 
                                    ElementStyle="{StaticResource CenterAlignmentStyle}" Foreground="#AAA"/>
                <DataGridTextColumn Header="处理时间" Width="126" Binding="{Binding SolvedTime, StringFormat='yyyy年MM月dd日 HH:mm'}"
                                    ElementStyle="{StaticResource CenterAlignmentStyle}" Foreground="#AAA"/>
                <DataGridTextColumn Header="记录人" Width="80" ElementStyle="{StaticResource CenterAlignmentStyle}" Foreground="#AAA">
                    <DataGridTextColumn.Binding>
                        <MultiBinding Converter="{x:Static local:UserIdConverter.Instance}">
                            <Binding Path="UserId" />
                            <Binding Path="DataContext.UserList" ElementName="alarmDataGrid"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="操作" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center">
                            <Hyperlink x:Name="hyplink" TextDecorations="None">
                                <Hyperlink.Style>
                                    <Style TargetType="Hyperlink">
                                        <Setter Property="Foreground" Value="#16a1ff"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Tag" Value="处理"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AlarmState.Status}" Value="Unsolved">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Foreground" Value="#16a1ff"/>
                                                <Setter Property="Tag" Value="处理"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding AlarmState.Status}" Value="SolvedBySystem">
                                                <Setter Property="Cursor" Value="Arrow"/>
                                                <Setter Property="Foreground" Value="#444"/>
                                                <Setter Property="Tag" Value="已处理"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding AlarmState.Status}" Value="SolvedByManual">
                                                <Setter Property="Cursor" Value="Arrow"/>
                                                <Setter Property="Foreground" Value="#444"/>
                                                <Setter Property="Tag" Value="已处理"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Hyperlink.Style>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding Path=DataContext.SolveByManualCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}}"
                                                                CommandParameter="{Binding .}" />
                                        </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Label Content="{Binding Tag, ElementName=hyplink}" Foreground="{Binding Foreground, ElementName=hyplink}" Cursor="{Binding Cursor, ElementName=hyplink}" />
                            </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 分页控件 -->
        <local:DataPager Grid.Row="2"
            Source="{Binding ItemsSource, ElementName=alarmDataGrid}" CurrentPage="{Binding CurrentPage, Mode=TwoWay}" PageSize="{Binding PageSize, Mode=TwoWay}"/>
    </Grid>
</UserControl>
